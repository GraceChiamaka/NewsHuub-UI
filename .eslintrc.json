{
	"env": {
		"es2021": true
	},
	"extends": [
		"plugin:react/recommended",
		"airbnb"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12
	},
	"plugins": [
		"react",
		"prettier"
	],
	"rules": {
		"one-var": 0,
		"react/prop-types": 0,
		"one-var-declaration-per-line": 0,
		"new-cap": 0,
		"consistent-return": 0,
		"arrow-parens": [
			"error",
			"as-needed"
		],
		"no-param-reassign": 0,
		"comma-dangle": 0,
		"curly": [
			"error",
			"multi-line"
		],
		"no-console": "warn",
		"no-unused-vars": "warn",
		"no-shadow": [
			"error",
			{
				"allow": [
					"req",
					"res",
					"err"
				]
			}
		],
		"react/react-in-jsx-scope": "off",
		"arrow-body-style": [
			"error",
			"as-needed"
		],
		"indent": [
			"off",
			4
		],
		"react/jsx-indent": [
			"off",
			4
		],
		"react/jsx-indent-props": [
			"off"
		],
		"react/jsx-filename-extension": [
			"warn",
			{
				"extensions": [
					".js",
					".jsx"
				]
			}
		],
		"prettier/prettier": [
			"error",
			{
				"trailingComma": "all",
				"tabWidth": 4,
				"semi": true,
				"singleQuote": true,
				"endOfLine": "lf"
			}
		]
	}
}